        var user_id = {{user_id}};

        function GetLanguage() {
            if (localStorage.myLang == 'es') return localStorage.myLang
            var l = navigator.language || navigator.userLanguage
            if (l.indexOf('es') == 0) return 'es'
            else return 'en'
        }
        var lang = GetLanguage()


        $(function () {
            $('#reportBtn').click(function () {
